---
// Rotating words inspired by https://github.com/Shroud-email/website/blob/main/src/components/atoms/ScrollingText.vue
---

<section class="bg-white">
    <div class="grid max-w-screen-xl px-4 pb-8 mx-auto lg:gap-8 xl:gap-0 py-8 lg:py-16 lg:grid-cols-12">
        <div class="mr-auto place-self-center lg:col-span-7">
            <h1 class="max-w-2xl text-4xl font-extrabold tracking-tight md:text-5xl">
                <div>Reliable, durable, and innovative</div>
                <div class="mt-2 text-primary-500">
                    - Makine Forcetech has it all
                </div>
            </h1>
            <p class="max-w-2xl mt-6 font-light text-gray-500 md:text-lg lg:text-xl">
                We are the global leader for Manufacturing Industrial & Commercial Laundry Equipment and have a wide range of products.
            </p>
        </div>
        <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
            <div class=" p-2 flex flex-col rounded-lg">
                <img class="hidden w-full mt-1 rounded-lg lg:mb-0 lg:flex" src="src/asset/ggg.png" alt="Sample usage of GraphMe">
            </div>
        </div>                
    </div>
</section>


<script>
  const container = document.getElementById('words');
  const words = document.querySelectorAll('#words span');
  let currentIndex = 0;
  console.log(container);
  console.log(words);
  console.log(words.length);
  setInterval(() => {
    words[currentIndex].className = "absolute transition-all duration-700 transform opacity-0 -translate-y-8";
    currentIndex = (currentIndex + 1) % words.length;
    words[currentIndex].className = "absolute transition-all duration-700 transform opacity-100 translate-y-0";
  }, 3000)
</script>